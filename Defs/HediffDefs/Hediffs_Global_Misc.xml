<?xml version="1.0" encoding="utf-8" ?>
<Defs>

 
  <HediffDef>
    <defName>GR_ToxicDamage</defName>
    <hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(0.7, 1.0, 0.7)</defaultLabelColor>
    <label>toxic damage</label>
    <lethalSeverity>1</lethalSeverity>
    <makesSickThought>true</makesSickThought>
    <scenarioCanAdd>true</scenarioCanAdd>
    <comps>
      <li Class="HediffCompProperties_Immunizable">
        <severityPerDayNotImmune>-0.08</severityPerDayNotImmune>
      </li>
    </comps>
    <stages>
      <li>
        <label>initial-hidden</label>
      </li>
      <li>
        <label>initial</label>
        <minSeverity>0.04</minSeverity>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.05</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>minor</label>
        <minSeverity>0.2</minSeverity>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.10</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>moderate</label>
        <minSeverity>0.40</minSeverity>
        <vomitMtbDays>5</vomitMtbDays>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.15</offset>
          </li>
        </capMods>
        
      </li>
      <li>
        <label>serious</label>
        <minSeverity>0.60</minSeverity>
        <vomitMtbDays>1</vomitMtbDays>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.25</offset>
          </li>
        </capMods>
       
      </li>
      <li>
        <label>extreme</label>
        <minSeverity>0.80</minSeverity>
        <vomitMtbDays>0.5</vomitMtbDays>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <setMax>0.10</setMax>
          </li>
        </capMods>
       
      </li>
    </stages>
  </HediffDef>
  
  <HediffDef>
    <defName>GR_Kamikaze</defName>
    <hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(0.7, 1.0, 0.7)</defaultLabelColor>
    <label>sudden detonation</label>
    <lethalSeverity>0.05</lethalSeverity>
    <makesSickThought>true</makesSickThought>
    <scenarioCanAdd>true</scenarioCanAdd>
    
    <stages>
      <li>
        <label>initial-hidden</label>
      </li>
      <li>
        <label>critical</label>
        <minSeverity>0.04</minSeverity>
        
      </li>
     
    </stages>
  </HediffDef>

  <HediffDef>
    <defName>GR_AdrenalineBurst</defName>
    <label>adrenaline burst</label>
    <makesSickThought>false</makesSickThought>
    <tendable>false</tendable>
	<isBad>false</isBad>
    <defaultLabelColor>(255,95,95)</defaultLabelColor>
	<hediffClass>HediffWithComps</hediffClass>
    <initialSeverity>0.001</initialSeverity>
    <comps>


      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>60</severityPerDay>
      </li>
	  <li Class="HediffCompProperties_Disappears">
        <disappearsAfterTicks>
          <min>30000</min>
          <max>30000</max>
        </disappearsAfterTicks>
      </li>
    </comps>
    <stages>
     
      <li>   
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>1.0</offset>
          </li>
        </capMods>
      </li>
	  
	  <li>
        <label>exhausted</label>
		<restFallFactorOffset>2.0</restFallFactorOffset>
        <minSeverity>1</minSeverity>
		<capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.75</offset>
          </li>
        </capMods>		
       
        
      </li>
     
    </stages>
  </HediffDef>
  
  <HediffDef>
    <defName>GR_InsectClouds</defName>
    <label>releasing insect clouds</label>
    <makesSickThought>false</makesSickThought>
    <tendable>false</tendable>
	<isBad>false</isBad>
    <defaultLabelColor>(100,100,100)</defaultLabelColor>
	<hediffClass>DraftingPatcher.Hediff_InsectClouds</hediffClass>
    <initialSeverity>0.001</initialSeverity>
    <comps>


      
	  <li Class="HediffCompProperties_Disappears">
        <disappearsAfterTicks>
          <min>30000</min>
          <max>30000</max>
        </disappearsAfterTicks>
      </li>
    </comps>
    <stages>
     
      <li>   
       
      </li>
	  
	 
     
    </stages>
  </HediffDef>
  
  <HediffDef>
    <defName>GR_Stampeding</defName>
    <label>stampeding</label>
    <makesSickThought>false</makesSickThought>
    <tendable>false</tendable>
	<isBad>false</isBad>
    <defaultLabelColor>(48,82,255)</defaultLabelColor>
	<hediffClass>HediffWithComps</hediffClass>
    <initialSeverity>0.001</initialSeverity>
    <comps>


      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>60</severityPerDay>
      </li>
	  <li Class="HediffCompProperties_Disappears">
        <disappearsAfterTicks>
          <min>10000</min>
          <max>10000</max>
        </disappearsAfterTicks>
      </li>
    </comps>
    <stages>
     
      <li>   
        
      </li>
	  
	  <li>
        <label>recovering</label>
        <minSeverity>1</minSeverity>
		
        
      </li>
     
    </stages>
  </HediffDef>


</Defs>